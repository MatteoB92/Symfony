{# src/OC/PlatformBundle/Resources/view/Advert/view.html.twig #}

{% extends "KernixForumBundle::layout.html.twig" %}

{% block title %}
  Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}

  <h2>{{ advert.title }}</h2>
  <i>Par {{ advert.author }}, le {{ advert.date|date('d/m/Y') }}</i>

  <div class="well">
    {{ advert.content }}
  </div>

  <p>
    <a href="{{ path('kernix_forum_home') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste
    </a>
    <a href="{{ path('kernix_forum_edit', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier le topic
    </a>
    <a href="{{ path('kernix_forum_edit', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Répondre
    </a>
    <a href="{{ path('kernix_forum_delete', {'id': advert.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer le topic
    </a>
  </p>

  {% if advert.image is not null %}
    <img src="{{ advert.image.url }}" alt="{{ advert.image.alt }}">
  {% endif %}

  {% if not advert.categories.empty %}
  <p>
    Ce Topic est parue dans les catégories suivantes :
    {% for category in advert.categories %}
      {{ category.name }}{% if not loop.last %}, {% endif %}
    {% endfor %}
  </p>
{% endif %}

{% endblock %}